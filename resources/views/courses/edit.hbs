<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa /blog</label>
            <input type="text" class="form-control"  value="{{course.name}}" id="exampleInputEmail1" name="name">
        </div>
         <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control"  id="exampleInputEmail1" name="description">{{course.description}}</textarea> 
        </div>
         <div class="form-group">
            <label for="videoID">Link video</label>
            <input type="text" class="form-control"  value="{{course.videoID}}" id="exampleInputEmail1" name="videoID">
        </div>        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>